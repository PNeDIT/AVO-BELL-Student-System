@model Student

<h3>Edit student information:</h3>
<hr />
<form asp-controller="Home" asp-action="EditStudent">
    <input asp-for="Id" hidden />

    <label asp-for="FirstName"></label>
    <input class="form-control" asp-for="FirstName" />

    <label asp-for="LastName"></label>
    <input class="form-control" asp-for="LastName" />

    <label asp-for="Class"></label>
    <input class="form-control" asp-for="Class" />

    <label asp-for="AvgSuccess"></label>
    <input class="form-control" asp-for="AvgSuccess" />

    <label asp-for="DateOfBirth"></label>
    <input class="form-control" asp-for="DateOfBirth" />

    <br />
    <br />

    <button class="btn btn-primary">Save changes</button>

    <button type="button" class="btn btn-danger" data-toggle="modal" data-target="#exampleModal">
        Delete student information
    </button>


    <div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">Delete student</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    Are you sure you want to delete all information about this student?
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                    <button type="button" onclick="deleteStudent()" class="btn btn-danger">Yes</button>
                </div>
            </div>
        </div>
    </div>
</form>



<script>
    const deleteStudent = () => {
        window.location = `/Home/DeleteStudent/${@Model.Id}`
    }
</script>